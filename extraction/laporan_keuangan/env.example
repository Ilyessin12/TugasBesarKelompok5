# ======================================
# IDX Financial Reports Scraper Configuration
# ======================================
# Copy this file to .env and fill in your actual values

# ======================================
# FILE SYSTEM CONFIGURATION
# ======================================

# Directory untuk menyimpan file ZIP yang didownload
# Akan dibuat otomatis jika belum ada
BASE_DOWNLOAD_DIR=downloads

# Path untuk menyimpan hasil JSON final
# File akan berisi semua data laporan keuangan yang sudah diproses
FINANCIAL_REPORTS_OUTPUT=financial_reports.json

# ======================================
# MONGODB CONFIGURATION
# ======================================

# MongoDB Atlas Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/
# Example: mongodb+srv://user123:mypassword@cluster0.abc123.mongodb.net/
MONGODB_CONNECTION_STRING=

# Nama database MongoDB yang akan digunakan
MONGODB_DATABASE_NAME=Big_Data_kel_5

# Nama collection untuk menyimpan laporan keuangan
COLLECTION_FINANCIAL_REPORTS=Docker_Scraping_Laporan_Keuangan

# ======================================
# OPTIONAL CONFIGURATIONS
# ======================================

# Uncomment dan sesuaikan jika diperlukan

# Timeout untuk Selenium WebDriver (dalam detik)
SELENIUM_TIMEOUT=30

# Batch size untuk MongoDB bulk operations
MONGODB_BATCH_SIZE=20

# Delay antara proses perusahaan (dalam detik)
COMPANY_PROCESSING_DELAY=2

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# ======================================
# DEVELOPMENT/TESTING
# ======================================

# Uncomment untuk testing dengan jumlah perusahaan terbatas
MAX_COMPANIES_TO_PROCESS=5

# Path untuk file emiten list (default: emiten_list.json)
# EMITEN_LIST_FILE=emiten_list.json